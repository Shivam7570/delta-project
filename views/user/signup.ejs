<% layout('/layouts/boilerplate') -%>  
<div class="row mt-3">
    <h1 class="col-6 offset-3" >SignUp on Wanderlust</h1>
    <div class="col-8 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder="username" required  class="form-control">
                <div class="invalid-feedback">Looks good</div>
                
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input type="text" id="email" name="email" placeholder="email" required  class="form-control">
                <div class="invalid-feedback">Looks good</div>
                
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="text" id="password" name="password" placeholder="password" required  class="form-control">
                <div class="invalid-feedback">Looks good</div>
                
            </div>
            <button class="btn btn-outline-dark ">SignUp</button>
        </form>
    </div>
</div>