
<% layout('/layouts/boilerplate') -%>
 
<body>
    <!-- <form action="/listing/new" method="GET">
        <button>Create</button>
    </form> -->
    <style>
     .filters{
      display: flex;
      margin-left: 2rem;
      text-align: center;
      flex-wrap: wrap;
     }
     .filter{
      text-align: center;
      margin-left: 2rem;
      opacity: 0.7;
     }
     .filter:hover{
      opacity: 1;
      cursor: pointer;
    

     }
     .tax-info{
      display: none;
     }
     .tax-togle{
      border: 1px solid black;
      border-radius: 1rem ;
      text-align: center;
      padding: 1rem;
      height: 3.5rem;
      margin-left: 3rem;

     } 
     .form-switch{
      text-align: center;
     }
    </style>
    <div class="filters">
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div><div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic City</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Forms</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter" style="text-align: center;">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="tax-togle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>

    </div>
<div class="row row-cols-lg-3 row-cols-md-3 row-cols-ms-1 mt-2">
    <% for (let listing of allListing) { %>
       <a href="/listing/<%= listing._id %>" class="listing-link">
        <div class="card listing-card col" style="width: 20rem; ">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image">
          
          <div class="card-body">
            <p>
              <b><%= listing.title %></b> <br>
              &#8377; <%=  listing.price.toLocaleString("in-IN") %>/night
              <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
       </a>
          <% } %>
</div>
</body>


<script>
  let texSwitch = document.getElementById("flexSwitchCheckDefault");
  texSwitch.addEventListener("click", ()=>{
   let taxinfo= document.getElementsByClassName("tax-info");
   for(info of taxinfo){
    if(info.style.display != "inline"){
      info.style.display = "inline";
    }else{
      info.style.display = "none"
    }
   }
  })
</script>