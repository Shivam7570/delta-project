<% layout('/layouts/boilerplate') -%>
<body>
<div class="row mt-4">
    <div class="col-8 offset-2">
        <h3 class="offset-2"><%= listings.title %></h3>
        <div class="card cols-6  listing-card" >
            <img src="<%= listings.image.url %>" class="card-img-top show-img offset-2" alt="...">
            <div class="card-body offset-2">  
                <p><%= listings.owner.username  %></p>              
                <%= listings.description %> <br>
                &#8377;  <%= listings.price.toLocaleString("en-IN") %> <br>
                <%= listings.location %>
                <%= listings.country %>
    
             </div>
          </div>
    </div>
</div>

<% if(currUser && listings.owner._id.equals(currUser._id)){ %>
<div class="col-8 offset-3 edit-btn ">
    <a href="/listing/<%= listings._id  %>/edit " class="btn  btn-dark col-2 edt">Edit list</a>
    <br><br>
    <form method="POST" action="/listing/<%= listings._id %>?_method=DELETE">
        <button class="btn add-btn  offset-2 dlt ">delete</button>
    </form>
   </div>
<% } %>
<div class="col-8 offset-3"> 
    <hr>
    <% if(currUser) {%>
    <h4>leave a Review</h4>
    <form action="/listings/<%= listings.id %>/reviews" method="post" novalidate class="needs-validation">
        <label for="rating">Rating</label>

        <fieldset class="starability-slot">

            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        <div>
            <label for="comment">Comment</label>
            <textarea  required name="review[comment]"  id="comment" cols="38" rows="5" class="form-control"></textarea>
            <div class="invalid-feedback">please submit some comments for review </div>   
        </div>
        <button class="btn btn-outline-dark ">Submit</button>
    </form>
    <% } %>
    <hr>
    <h4><b>All Reviews</b></h4>
   <div class="row">
    <% for (const review of listings.reviews) { %>
        <div class="card col-5 mb-3 ms-4 ">
            <div class="card-body mb-4">
                <h5 class="card-title"><%= review.auther.username  %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating  %>"></p>
                <p class="card-text"><%= review.comment %></p>
                <form action="/listings/<%= listings._id %>/reviews/<%= review._id  %>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-dark">DELETE</button>
                </form>
            </div>

        </div>
    <% } %>
   </div>

   </div>

</body>
 